{
  "name": "wearly-styles-be",
  "version": "1.0.0",
  "description": "Wearly Styles Backend API",
  "keywords": [
    "express",
    "typescript",
    "rest-api",
    "backend"
  ],
  "license": "ISC",
  "author": "",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "db:docker:up": "docker-compose up -d",
    "db:docker:down": "docker-compose down",
    "db:init": "npm run db:migrate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:reset": "prisma migrate reset",
    "db:generate": "prisma generate",
    "db:reset": "npm run db:init && npm run db:seed",
    "db:setup": "npm run db:docker:up && npm run db:migrate && npm run db:seed",
    "db:seed": "ts-node -r tsconfig-paths/register prisma/seed/index.ts",
    "db:studio": "prisma studio",
    "dev": "ts-node -r tsconfig-paths/register src/server.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "start": "node dist/server.js"
  },
  "dependencies": {
    "@prisma/client": "6.13.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.6",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "prisma": "6.13.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
